<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/drawable_pick_pet"
        android:weightSum="9"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Bảng xếp hạng"
            android:textStyle="bold"
            android:textColor="@color/colorDialog_End"
            android:gravity="center"
            android:textSize="28sp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <ImageView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:adjustViewBounds="true"
                android:src="@drawable/leaderboard"/>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:id="@+id/iv_SecondPet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="125dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/iv_FirstPet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="190dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/iv_ThirdPet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="110dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_Message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Lời tiền\nBạn được cộng thêm 2000$"
            android:gravity="center"
            android:textColor="@color/colorLightRed"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_Replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_button_money"
                android:text="Làm kèo mới"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="32dp"
                android:paddingLeft="32dp"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_explain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="\?"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/drawable_button_money"
            android:layout_margin="8dp"
            android:layout_gravity="right"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="8">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@drawable/cash"/>
            <TextView
                android:id="@+id/tv_FinishCash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textStyle="bold"
                android:text="9999999999999999999$"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>